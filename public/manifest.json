{
	"manifest_version": 2,
	"name": "Thinkful Toggle Answers",
	"version": "0.0.3",
	"author": "AJ Webb",

	"description": "An extension to keep you honest",
	"icons": {
		"128": "icon-128.png",
		"100": "icon-100.png",
		"48": "icon-48.png"
	},

	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},

	"permissions": [
		"tabs"
	],

	"content_scripts": [{
		"matches": ["*://*.thinkful.com/courses/*"],
		"js": ["js/jquery.js", "js/app.js"]
	}]
}